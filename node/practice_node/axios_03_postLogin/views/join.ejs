<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>postLoginEjs</title>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <link rel="stylesheet" href="../css/style.css" />
  </head>
  <body>
    <div id="form">
      <h3 id="join_title">회 원 가 입</h3>
      <form id="info_all" style="text-align: center" action="/post" method="post">
        <fieldset>
          <legend>Personal Info</legend>
          <input type="text" name="name" placeholder="Enter your name" />

          <br />

          <div id="info_birth">
            <select name="info_birth" id="info_DD">
              <option disabled selected value="info_DD">Day</option>
            </select>
            <select name="info_birth" id="info_MM">
              <option disabled selected value="info_MM">Month</option>
            </select>
            <select name="info_birth" id="info_YY">
              <option disabled selected value="info_YY">Year</option>
            </select>
          </div>

          <input type="text" name="email" placeholder="Enter your Email" />

          <br />

          <div id="info_gender">
            <input type="radio" name="gender" id="male" value="male" /><label for="m">men</label>
            <input type="radio" name="gender" id="female" value="female" /><label for="w">women</label>
            <input type="radio" name="gender" id="?" value="?" /><label for="?">alien</label>
          </div>

          <br />
        </fieldset>
        <fieldset>
          <legend>Login Info</legend>
          <input type="text" name="id" placeholder="Enter your ID" />

          <br />

          <input type="password" name="pw" placeholder="Enter your password" />

          <br />
        </fieldset>
        <button type="button" onclick="clickJoin()">JOIN</button>
      </form>
    </div>

    <script>
      function getData() {
        const form = document.forms["join"];

        if (!form.checkValidity()) {
          form.reportValidity();
          return false;
        }

        const data = {
          name: form.name.value,
          birth: form.birth.value,
          email: form.email.value,
          gender: form.gender.value,
          id: form.id.value,
          pw: form.pw.value,
        };

        return data;
      }

      function clickJoin() {
        const data = getData();
        if (!data) return;
        axios({
          method: "GET",
          url: "/axios",
          params: data,
        }).then((res) => {
          const {
            name
          } = res.data;
          $("#info_all").html(
            `Success request axios get ${name}님 환영합니다!`
          );
        });
      }
    </script>
  </body>
</html>