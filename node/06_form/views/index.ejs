<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>form</title>
  </head>
  <body>
    <!-- get 요청 -->
    <!-- action = 요청을 보낼 주소 -->
    <!-- method = 어떤 방식의 요청을 사용할 지 (get of post) -->
    <form action="/get" method="get" target="_blank" name="login">
      <input type="text" name="id" placeholder="Enter your ID" />
      <br />
      <input type="password" name="pw" placeholder="Enter your password" />
      <br />
      <!-- button type="submit" : form tag info에 맞게 form을 제출 -->
      <button type="submit">LOGIN</button>
    </form>

    <script>
      console.log(document.forms["login"])
    </script>

    <!-- post 요청 -->
    <form action="/post" method="post">
      <fieldset>
        <legend>Personal Info</legend>
        <input type="text" name="name" minlength="4" placeholder="Enter your name" required />
        <br />

        <input type="text" name="email" placeholder="Enter your Email" required />
        <br />
        <input type="radio" name="gender" id="m" value="m" /><label for="m">men</label>
        <input type="radio" name="gender" id="w" value="w" /><label for="w">women</label>
        <br />
      </fieldset>
      <fieldset>
        <legend>Login Info</legend>
        <input type="text" name="id" pattern="^([a-zA-Z0-9가-힣]){5,12}$" title="소문자, 대문자, 한글, 숫자로 조합된 5~12자로 입력" placeholder="Enter your ID" required />
        <br />
        <input type="password" name="pw" oninput="validCheckPw(this)" placeholder="Enter your password" required />
        <div ide="err_pw"></div>
        <br />
      </fieldset>
      <button type="submit">JOIN</button>
    </form>

    <script>
      function validCheckPw(el) {
        const regexPw = /([a-zA-Z0-9]){7,12}$/
        const value = el.value
        const error = document.getElementById(err_pw)
        if (regexPw.test(value)) {
          console.log("정규식 일치")
        } else {
          err.innerHTML = "소문자, 대문자, 숫자로 된 7~12자리 입력"
          console.log("정규식 불일치")
        }
      }
    </script>
  </body>
</html>